<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.OrderMapper">
    <update id="updateOrder" parameterType="com.sky.entity.Orders">
        update orders
        <set>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="payStatus != null">
                pay_status = #{payStatus},
            </if>
            <if test="deliveryStatus != null">
                delivery_status = #{deliveryStatus},
            </if>
            <if test="cancelReason != null">
                cancel_reason = #{cancelReason},
            </if>
            <if test="rejectionReason != null">
                rejection_reason = #{rejectionReason},
            </if>
            <if test="cancelTime != null">
                cancel_time = #{cancelTime},
            </if>
            <if test="estimatedDeliveryTime != null">
                estimated_delivery_time = #{estimatedDeliveryTime},
            </if>
            <if test="deliveryTime != null">
                delivery_time = #{deliveryTime},
            </if>
            <if test="tablewareStatus != null">
                tableware_status = #{tablewareStatus},
            </if>
            <if test="tablewareNumber != null">
                tableware_number = #{tablewareNumber},
            </if>
            <if test="packAmount != null">
                pack_amount = #{packAmount},
            </if>
            <if test="amount != null">
                amount = #{amount},
            </if>
            <if test="payMethod != null">
                pay_method = #{payMethod},
            </if>
            <if test="payStatus != null">
                pay_status = #{payStatus},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="consignee != null">
                consignee = #{consignee},
            </if>
            <if test="checkoutTime != null">
                checkout_time = #{checkoutTime},
            </if>
            <if test="orderTime != null">
                order_time = #{orderTime},
            </if>
            <if test="addressBookId != null">
                address_book_id = #{addressBookId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
        </set>
        where id = #{id}
    </update>
<!--需要根据2，3，4分别命名
    count(2) -> 待接单
    count(3) -> 已接单
    count(4) -> 派送中
-->
    <select id="statistics" resultType="com.sky.vo.OrderStatisticsVO">
         select status, count(*) from orders where status in (2,3,4) group by status
    </select>

